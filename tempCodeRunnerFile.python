import xml.etree.ElementTree as ET
from fitparse.profile import DATA_DIRECTORY
import os

# Manufacturers.xml laden
xml_path = os.path.join(DATA_DIRECTORY, 'Manufacturers.xml')
tree = ET.parse(xml_path)
root = tree.getroot()

# Mapping Code â†’ Name
MANUFACTURER_CODES = {
    int(m.find('number').text): m.find('name').text
    for m in root.findall('manufacturer')
}